<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arasu.vt.moneyhandler">

    <application
        android:name=".application.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChangeIncomeActivity"
            android:label="Change Income Category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.InsertIncomeCategoryActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ExpensesCategoryActivity"
            android:label="Expenses Category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.InsertExpensesActivity"
            android:label="Expenses Category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SubCategorySettings"
            android:label="SubCategory Settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.Budget"
            android:label="Budget"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.AddBudgetActivity"
            android:label="Add Budget"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>